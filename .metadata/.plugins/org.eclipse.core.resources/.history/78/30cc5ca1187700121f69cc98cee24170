package com.vectorone;

import android.app.Application;
import android.content.Context;
import android.net.wifi.WifiInfo;
import android.net.wifi.WifiManager;
import android.util.Log;

public class WifiSupport {

	private WifiManager wifi;
	private WifiInfo info;
	private String TAG="WIFI";

	public WifiSupport(Application app) {
		wifi = (WifiManager) app.getSystemService(Context.WIFI_SERVICE);
		info = wifi.getConnectionInfo();

	}

	public void getMacAddress(){
		Log.i(TAG, "BSSID:"+info.getBSSID());
		Log.i(TAG, "MAC:"+info.getMacAddress());
		Log.i(TAG, "SSID:"+info.getSSID());
	}
}
