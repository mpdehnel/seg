package com.vectorone;

import java.util.LinkedList;

import com.data.Cach;
import com.data.DataBaseConnector;

import android.app.ListActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.AdapterView;
import android.widget.AdapterView.OnItemClickListener;
import android.widget.ArrayAdapter;
import android.widget.ListAdapter;
import android.widget.ListView;

public class CachListActivity extends ListActivity {

	public final int NAME = 1;
	public final int DISTANCE = 2;
	public final int NEXTBESTTARGET = 3;
	public LinkedList<Cach> dummycachs;

	public void onCreate(Bundle icicle) {
		super.onCreate(icicle);
		dummycachs.add(new Cach("cach1", 12.2, 4.3, "testDiscription"));
		dummycachs.add(new Cach("cach2", 1.2, 23.3, "testDiscription"));

		ArrayAdapter<String> adapter = new ArrayAdapter<String>(this,
				android.R.layout.simple_list_item_1, android.R.id.text1,listtostring(dummycachs));
		setListAdapter(adapter);

	}

	private String[] listtostring(LinkedList<Cach> dummycachs2) {
		String[] cachlist = new String[dummycachs2.size()];
		for (int i = 0; i < cachlist.length; i++)
			cachlist[i] = dummycachs2.get(i).toString();
		return cachlist;
	}

}
