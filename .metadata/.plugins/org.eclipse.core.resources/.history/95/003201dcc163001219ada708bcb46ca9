package com.vectorone;

import com.data.DataClass;

import android.content.Context;
import android.graphics.Canvas;
import android.graphics.Color;
import android.graphics.Paint;
import android.provider.ContactsContract.Contacts.Data;
import android.view.View;

public class ScaleOverlay extends View{
	private int zoomLvl;
	
	public ScaleOverlay(Context context, int zoomLvl) {
		super(context);
		this.zoomLvl=zoomLvl;
		// TODO Auto-generated constructor stub
	}
	@Override 
    protected void onDraw(Canvas canvas) { 
            // TODO Auto-generated method stub 
			float midx = DataClass.getMylat();
			float midy = DataClass.getMylng();
            Paint paint = new Paint(); 
            paint.setStyle(Paint.Style.STROKE); 
            paint.setColor(Color.GRAY);
            canvas.drawCircle(midx, midy, 50, paint);
            canvas.drawCircle(midx, midy, 100, paint);
            canvas.drawCircle(midx, midy, 150, paint);
            canvas.drawCircle(midx, midy, 200, paint);
            super.onDraw(canvas); 
    } 
}
