package com.vectorone;

import com.data.DataClass;
import com.google.android.maps.GeoPoint;

import android.content.Context;
import android.graphics.Canvas;
import android.graphics.Color;
import android.graphics.Paint;
import android.view.View;

public class CameraOverlay extends View {
	private long time;
	
	public CameraOverlay(Context context) {
		super(context);
		time=System.currentTimeMillis()/1000;

	}

	@Override
	protected void onDraw(Canvas canvas) {
		long time2=System.currentTimeMillis()/1000;
		for (int i = 0; i < DataClass.cachs.size(); i++) {
			// map points;
			int teamcolor=  DataClass.cachs.get(i).getTeamcolor();
			GeoPoint gp = DataClass.cachs.get(i).getGeopoint();
			String name = DataClass.cachs.get(i).getName();
			String discription = DataClass.cachs.get(i).getDiscripton();
			//TODO: get my postion calculate plac for overlay;

			Paint paint = new Paint();
			paint.setStyle(Paint.Style.FILL);
			paint.setColor(Color.RED);
			// for loop for the targets
			
			
			
			if((time-time2)%3==0){
			canvas.drawCircle(40, 40, 20, paint);
			}else{
				canvas.drawCircle(80, 80, 20, paint);
				onDraw(canvas);
			}
		}
		super.onDraw(canvas);

	}

}