public class MainLogInActivity extends Activity {

	private LinkedList<Integer> history = new LinkedList<Integer>();
	private CachListActivity cachselection;
	private DataBaseConnector dbcon;
	private ListView listviewcachs;

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		// TODO:
		dbcon = new DataBaseConnector("192.168.1.1", 8800);
		// history.add(R.layout.activity_login);
		setContentView(R.layout.activity_login);

		Button loginbutton = (Button) findViewById(R.id.loginbutton);

		loginbutton.setOnClickListener(new View.OnClickListener() {
			Intent intent = new Intent(getApplicationContext(),
					MenuActivity.class);

			@Override
			public void onClick(View v) {
				startActivity(intent);
			}
		});

	}
}
