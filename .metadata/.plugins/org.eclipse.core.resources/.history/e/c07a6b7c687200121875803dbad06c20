package com.game;

import java.util.Timer;
import java.util.TimerTask;

import android.graphics.Color;
import android.os.CountDownTimer;
import android.widget.CheckBox;
import android.widget.TextView;

public class GameTime extends Timer {

	private CheckBox[] lights;
	private long starttime;
	private TextView t1;
	private long millisInFuture;
	private long time;
	private int speedfaktor = 15;
	private GameActivity game;

	public GameTime(int start, int refresh, CheckBox[] lights,
			TextView textView, GameActivity gameActivity) {
		this.lights = lights;
		this.millisInFuture = millisInFuture / 100;
		this.t1 = textView;
		this.game = gameActivity;
		t1.setTextColor(Color.WHITE);
		
		new Timer().schedule(new TimerTask() {
			@Override
			public void run() {
				// Do whatever you want
			}
		}, start, refresh);
		
		
		
	}

	public GameTime createTimer(int start, int refresh) {
	
	}

	public void gamecontent() {
		time = millisInFuture - (millisUntilFinished / 100);
		t1.setText(time + "asd" + isfull());
		if (time % speedfaktor == 0) {
			setSpeedfactor(time);
			lights[generate()].setChecked(false);
		}

	}

	private void setSpeedfactor(long time) {
		if (time > 100)
			speedfaktor = 10;
		if (time > 200)
			speedfaktor = 8;
		if (time > 300)
			speedfaktor = 5;
		if (time > 400)
			speedfaktor = 3;
		if (time > 450)
			speedfaktor = 2;
		if (time > 500)
			speedfaktor = 1;

	}

	private int generate() {
		int i = (int) (Math.random() * 12);
		while (!lights[i].isChecked() && !isfull()) {
			i = (int) (Math.random() * 12);
		}
		return i;
	}

	private boolean isfull() {
		for (int i = 0; i < lights.length; i++) {
			if (lights[i].isChecked())
				return false;
		}
		game.stop();
		return true;
	}

}
