<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menue_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="4" >

    <TextView
        android:id="@+id/MenueUsername"
        android:layout_width="183dp"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="@string/username" />

    <Button
        android:id="@+id/cachselectbutton"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="3"
        android:onClick="cachselect"
        android:text="@string/button_cachselect" />

    <Button
        android:id="@+id/button_maps"
        android:layout_width="92dp"
        android:layout_column="2"
        android:layout_gravity="left"
        android:layout_row="3"
        android:text="@string/button_maps" />

    <Button
        android:id="@+id/settingsbutton"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="right"
        android:layout_row="4"
        android:onClick="settings"
        android:text="@string/button_settings" />

    <Button
        android:id="@+id/mebutton"
        android:layout_width="78dp"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="4"
        android:onClick="user"
        android:text="@string/button_user" />

    <Space
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="97dp"
        android:layout_column="0"
        android:layout_row="2" />

    <Space
        android:layout_width="110dp"
        android:layout_height="1dp"
        android:layout_column="1"
        android:layout_row="0" />

    <Space
        android:layout_width="92dp"
        android:layout_height="1dp"
        android:layout_column="2"
        android:layout_row="0" />

    <Space
        android:layout_width="159dp"
        android:layout_height="1dp"
        android:layout_column="3"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="62dp"
        android:layout_column="0"
        android:layout_row="3" />

    <Space
        android:layout_width="1dp"
        android:layout_height="107dp"
        android:layout_column="0"
        android:layout_row="4" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="202dp"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="left"
        android:layout_row="5"
        android:text="LogOut" />

    <Space
        android:layout_width="100dp"
        android:layout_height="104dp"
        android:layout_column="1"
        android:layout_row="5" />

</GridLayout>